---
import { getStaticTranslations, getLangFromUrl, useTranslations } from "@i18n/utils";
import { partners } from "@libs/partners";
import PartnerCard from "@components/partners/PartnerCard.astro";
import Layout from "@layouts/Layout.astro";

export function getStaticPaths() {
	return getStaticTranslations();
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="MiNET - Nos partenaires">
    <main class="py-20 px-2 mt-20">
        <section class="relative flex flex-col items-center gap-40 text-white max-w-8xl mx-auto">
            <h1 class="text-5xl md:text-6xl font-bold text-center">{t('partners.title')}</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {partners.map(partner =>
                <PartnerCard image={partner.image} name={t(partner.name)}>
                    {t(partner.description)}
                </PartnerCard>
                )}
            </div>
        </section>
    </main>
</Layout>