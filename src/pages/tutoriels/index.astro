---
import { getCollection } from "astro:content";

import CardSkew from "@components/CardSkew.astro";
import TutorialCard from "@components/TutorialCard.astro";
import Layout from "@layouts/Layout.astro";

const tutorials = await getCollection("tutoriels");
---

<Layout title="MiNET - Tutoriels">
    <main class="py-20 mt-20 text-white">
        <div class="flex flex-col items-center gap-20 max-w-8xl mx-auto">
            <h1 class="text-4xl font-bold my-6">Tout ce dont vous avez besoin de savoir pour utiliser nos services.</h1>
            <CardSkew>
                <div class="grid grid-cols-3 gap-10">
                    {tutorials.map(tutorial => (
                        <TutorialCard
                            icon={tutorial.data.icon}
                            title={tutorial.data.title}
                            description={tutorial.data.description}
                            href={tutorial.slug}
                        />
                    ))}
                </div>
            </CardSkew>
        </div>
    </main>
</Layout>