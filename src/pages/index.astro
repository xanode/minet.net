---
import Globe from '@components/Globe.astro';
import TypingCursor from '@components/TypingCursor.astro';
import Layout from '@layouts/Layout.astro';
---

<Layout title="MiNET">
	<main class="py-20 mt-20">
		<div class="flex flex-col items-center gap-40">
			<section class="relative flex flex-col items-center gap-20 text-white max-w-8xl">
				<h1 class="text-7xl font-bold text-center leading-tight">
					Nous sommes<br />
					<TypingCursor strings={["le fournisseur d'accès internet", "l'hébergeur web"]} /><br />
					étudiant de Télécom SudParis.
				</h1>
				<Globe />
			</section>
		</div>
	</main>
</Layout>