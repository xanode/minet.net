<canvas id="minet-globe" class="absolute w-full h-full cursor-grab opacity-0 transition-opacity duration-1000"></canvas>

<script>
    import type Phenomenon from 'phenomenon';
    import createGlobe from "cobe";

    let phi: number = 0;
    let canvas: HTMLCanvasElement = document.querySelector('#minet-globe') as HTMLCanvasElement;

    const globe: Phenomenon = createGlobe(canvas, {
        devicePixelRatio: 1,
        width: canvas.offsetWidth,
        height: canvas.offsetWidth,
        phi: 4,
        theta: 0.3,
        dark: 1,
        diffuse: 0.2,
        mapSamples: 16000,
        mapBrightness: 20,
        baseColor: [0.1, 0.1, 0.1],
        markerColor: [251/255, 100/255, 21/255],
        glowColor: [0.1, 0.1, 0.1],
        offset: [0, 0],
        markers: [
            { location: [48.856614, 2.3522219], size: 0.03 }
        ],
        onRender: (state: Record<string, any>) => {
            state.phi = phi;
            state.width = canvas.offsetWidth;
            state.height = canvas.offsetWidth;
            phi += 0.002;
        },
    });

    setTimeout(() => canvas.style.opacity = '1');
</script>