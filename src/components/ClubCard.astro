---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import CardSkew from "@components/CardSkew.astro";

interface Props {
    image: ImageMetadata;
    name: string;
    color: string;
}
const { image, name, color } = Astro.props;
---

<CardSkew rounded="rounded-xl" color={color}>
    <div class="flex flex-col items-stretch justify-between gap-4 border border-white/10 hover:border-white/50 rounded-xl p-3 transition-colors duration-200">
        <Image src={image} alt=`Logo de ${name}` class="w-auto h-72 md:h-98 object-contain" />
        <h2 class="text-3xl font-bold text-center text-white md:text-transparent group-hover:text-white transition-colors duration-200">{name}</h2>
    </div>
</CardSkew>