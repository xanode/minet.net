---
interface Props {
    keys: string[];
    size?: string;
}
const { keys, size } = Astro.props;
---

<span class:list={["not-prose inline-flex items-center gap-1", size]}>
    {keys.map((key, index) =>
    <>
    <kbd class="text-center leading-5 px-1.5 border rounded-md border-neutral-800 text-neutral-200 bg-neutral-950">
        {key}
    </kbd>
    {index < keys.length - 1 && <span class="text-gray-300">+</span>}
    </>
    )}
</span>

