---
interface Props {
    colors: string[];
}
const { colors } = Astro.props;
---

<div class="hidden lg:block absolute -z-1 inset-0 overflow-hidden blur-pulse-after select-none pointer-events-none">
    <div class={`absolute rounded-full ${colors[0]} opacity-60 w-175 h-175 -z-20 top-2/5 left-3/5 mix-blend-lighten animate-gradient-1`}></div>
    <div class={`absolute rounded-full ${colors[1]} opacity-60 w-150 h-150 -z-10 top-3/5 left-2/5 mix-blend-screen animate-gradient-2`}></div>
    <div class={`absolute rounded-full ${colors[2]} opacity-60 w-125 h-125 -z-30 top-1/2 left-1/2 mix-blend-screen animate-gradient-3`}></div>
</div>