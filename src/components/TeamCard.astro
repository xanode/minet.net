---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    image: ImageMetadata;
    role: string;
    name: string;
    pseudo: string;
}
const { image, role, name, pseudo } = Astro.props;
---

<div class="flex flex-col items-center gap-10 ml-6 text-center rounded-2xl border border-transparent hover:border-sky-400 hover:cursor-pointer p-2">
    <figure class="relative h-40 md:h-64 w-40 md:w-64 overflow-hidden rounded-2xl bg-neutral-900 shadow-2xl shadow-sky-900">
        <Image src={image} alt="" class="absolute inset-0 w-full h-full" />
    </figure>
    <div class="space-y-4">
        <p class="text-2xl md:text-3xl">{name}</p>
        <p class="opacity-75 md:text-lg">{role}</p>
        <p class="font-mono text-sm text-red-500 font-semibold drop-shadow-lg-red-500">{pseudo}</p>
    </div>
</div>