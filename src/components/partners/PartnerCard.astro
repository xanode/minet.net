---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    image: ImageMetadata;
    name: string;
}
const { image, name } = Astro.props;
---

<div class="flex flex-col items-center justify-between gap-10 p-6 border border-white/10 hover:border-white/50 transition-colors duration-200">
    <Image src={image} alt="" class="max-h-64 w-auto" />
    <h2 class="text-2xl font-bold">{name}</h2>
    <p class="text-center text-neutral-500">
        <slot />
    </p>
</div>