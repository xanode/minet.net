---
import CardSkew from '@components/ui/CardSkew.astro';

interface Props {
    number: number;
    title: string;
}
const { number, title } = Astro.props;
---

<div class="relative flex flex-col">
    <div class="flex items-center gap-2 px-4 lg:px-0">
        <span class="flex grow shrink h-[1px] border-t border-dashed border-neutral-500"></span>
        <span class="w-3 h-3 rounded-full mx-1 shadow-[0_0_0_1.5px_rgb(255_255_255_/_30%)_inset]"></span>
        <span class="flex grow shrink h-[1px] border-t border-dashed border-neutral-500"></span>
    </div>
    <div class="relative flex flex-col items-center gap-2 text-center pt-2 px-1 lg:px-6">
        <span class="flex w-[1px] h-10 border-l border-dashed border-neutral-500"></span>
        <div class="absolute inset-0 pointer-events-none -z-10 bg-white opacity-70 scale-50 blur-shine rounded-full"></div>
        <CardSkew color="bg-white" rounded="rounded-none" size="w-64 h-64">
            <div class="p-[1px]">
                <div class="flex flex-col items-center gap-10 px-4 pb-4 bg-black">
                    <div class="relative w-14 h-14 overflow-hidden">
                        <span class="absolute inset-0 text-center text-4xl text-white leading-normal">
                            { number }
                        </span>
                    </div>
                    <h2 class="text-2xl md:text-3xl text-white/80 font-bold">
                        { title }
                    </h2>
                    <p class="md:text-lg text-white/50">
                        <slot />
                    </p>
                </div>
            </div>
        </CardSkew>
    </div>
</div>