---
interface Props {
    number: number;
    title: string;
}
const { number, title } = Astro.props;
---

<div class="relative flex flex-col border rounded-2xl border-neutral-700 hover:border-neutral-400 bg-neutral-950/70 hover:bg-neutral-950/90 duration-500 p-4">
    <div class="flex items-center justify-center gap- px-4 lg:px-0">
        <span class="border rounded-full border-neutral-800 bg-neutral-950 w-14 text-center text-4xl text-white leading-normal">
            {number}
        </span>
    </div>
    <div class="relative flex flex-col items-center gap-2 text-center pt-2 px-1 lg:px-6">
        <span class="flex w-[1px] h-10 border-l border-dashed border-neutral-500"></span>
        <div class="absolute inset-0 pointer-events-none -z-10 rounded-full"></div>
            <div class="p-[1px]">
                <div class="flex flex-col items-center gap-10 px-4 pb-4 bg-transparent">
                    <h2 class="text-2xl md:text-3xl text-neutral-300 font-bold">
                        { title }
                    </h2>
                    <p class="md:text-lg text-neutral-500">
                        <slot />
                    </p>
                </div>
            </div>
    </div>
</div>