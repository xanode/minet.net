---
import { Image } from 'astro:assets';
import AnimatedGradients from '@components/ui/AnimatedGradients.astro';
import type { ImageMetadata } from 'astro';

interface Props {
    name?: string;
    image: ImageMetadata;
    color1: string;
    color2: string;
    color3: string;
}
const { name, image, color1, color2, color3 } = Astro.props;
const colors = [color1, color2, color3];
---

<div class="aria-hidden:hidden relative flex flex-col lg:flex-row items-center gap-20 mt-20" data-name={name}>
    <AnimatedGradients colors={colors} />
    <div class="overflow-hidden basis-1/2 border rounded-2xl border-white/50 md:w-1/2">
        <Image src={image} alt="" class="w-full" />
    </div>
    <div class="relative flex flex-col gap-2 max-w-5xl">
        <slot />
    </div>
</div>